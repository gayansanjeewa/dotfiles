# Sample gitconfig
#

[hub]
        protocol = https
[user]
        name = AUTHORNAME
        email = AUTHOREMAIL
        signingkey = AUTHORSIGNKEY
[credential]
        helper = GIT_CREDENTIAL_HELPER
[alias]
        # Branch name
        branch-name = !git rev-parse --abbrev-ref HEAD

        wtf     = !$ZSH/bin/git-wtf
        count   = !git shortlog -sn
        prune = fetch --prune
        undo = reset --soft HEAD^
        stash-all = stash save --include-untracked
        glog = log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
        prune-local-branches = !git fetch --prune && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs git branch -D

        gpul = !git pull --prune --rebase

[color]
        diff = auto
        status = auto
        branch = auto
        ui = true
[core]
        excludesfile = ~/.gitignore
        editor = vim
        autocrlf = input
[apply]
        whitespace = nowarn
[mergetool]
        keepBackup = false
[difftool]
        prompt = false
[help]
        autocorrect = 1
[push]
        # See `git help config` (search for push.default)
        # for more information on different options of the below setting.
        #
        # Setting to git 2.0 default to suppress warning message
        default = simple
[commit]
        template = /Users/toni/.gitmessage.txt
        gpgSign = true

[diff]
        tool = pstorm
[difftool]
        prompt = false
[difftool.pstorm]
        cmd = /usr/local/bin/pstorm diff "$LOCAL" "$REMOTE"
[merge]
        tool = pstorm
        ff = only
[mergetool.pstorm]
        cmd = /usr/local/bin/pstorm merge "$LOCAL" "$REMOTE" "$BASE" "$MERGED"

[difftool "sourcetree"]
	    cmd = /usr/local/bin/pstorm diff \"$LOCAL\" \"$REMOTE\"
	    path =

[mergetool "sourcetree"]
	    cmd = /usr/local/bin/pstorm merge \"$LOCAL\" \"$REMOTE\" \"$BASE\" \"$MERGED\"
	    trustExitCode = true
[fetch]
	prune = true
[status]
        showUntrackedFiles = all
[pager]
       diff = diff-so-fancy | less --tabs=1,5 -RFX
       show = diff-so-fancy | less --tabs=1,5 -RFX
